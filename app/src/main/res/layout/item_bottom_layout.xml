<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:background="@color/head_line_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="71dp">
    <TextView
        android:id="@+id/item_recycler_title"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="1233"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <View
        android:background="@color/heavy_recycler_back"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/item_bottom_like"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_like_pic"
                android:src="@mipmap/ic_flow_cell_favor_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:text="123"
                android:paddingLeft="5dp"
                android:id="@+id/item_bottom_number"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/heavy_recycler_back"/>
        <ImageView
            android:id="@+id/item_bottom_share"
            android:layout_width="0dp"
            android:src="@mipmap/ic_flow_cell_share_normal"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>